
<% if current_user.itineraries.empty? %>
  <h1>You have no saved itineraries</h1>
<% else %>
  <h1>Here are your itineraries:</h1>

  <table>
	  <% current_user.itineraries.each do |itinerary| %>
	  <tr>
		  <td><%= link_to "#{itinerary.name}", "/itineraries/#{itinerary.id}" %></td>
		  <td><%= link_to "edit", edit_itinerary_path(itinerary.id) %></td>
		  <td><%= link_to "delete", itinerary_path(itinerary.id), method: :delete %></td>
		</tr>
  	<% end %>
	</table>

<% end %>
<%= button_to "Create new itinerary!", new_itinerary_path, method: :get %> 
